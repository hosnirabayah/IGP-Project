pipeline {
    agent any
    stages {
        stage('Code Checkout') {
            steps {
                git 'https://github.com/hosnirabayah/IGP-Project.git'
            }
        }

        stage('Code Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Static Code Analysis') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

    
    }
}
